<!-- this widget doesn't work the same was as the scale entry in the existing AJAX viewer, so we may make a new one -->
<WidgetInfo>
  <Type>ViewSize</Type>
  <LocalizedType>视图尺寸</LocalizedType>
  <Description>按照用户指定的单位显示当前视图下地图的尺寸。</Description>
  <Location></Location>
  <Label>视图尺寸</Label>
  <Tooltip>当前视图下地图的尺寸</Tooltip>
  <StatusText></StatusText>
  <ImageUrl></ImageUrl>
  <ImageClass></ImageClass>
  <StandardUi>false</StandardUi>
  <ContainableBy>Splitterbar</ContainableBy>
  <Parameter>
    <Name>Units</Name>
    <Description>地图尺寸单位</Description>
    <Type>String</Type>
    <Label>单位</Label>
    <AllowedValue>
      <Name>Meters</Name>
      <Label>米</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Kilometers</Name>
      <Label>千米</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Feet</Name>
      <Label>英尺</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Yards</Name>
      <Label>码</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Miles</Name>
      <Label>英里</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Degrees</Name>
      <Label>度</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Pixels</Name>
      <Label>像素</Label>
    </AllowedValue>
    <DefaultValue>Meters</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>Precision</Name>
    <Description>地图尺寸精度</Description>
    <Type>integer</Type>
    <Label>精度</Label>
    <Min>-1</Min>
    <Max>6</Max>
    <DefaultValue>2</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>Template</Name>
    <Description>显示地图尺寸的模板，{}中的值将被实际数值替换。</Description>
    <Type>String</Type>
    <Label>显示方式模板</Label>
    <DefaultValue>{w} x {h} {units}</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
</WidgetInfo>

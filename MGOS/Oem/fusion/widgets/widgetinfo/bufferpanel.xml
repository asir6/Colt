<WidgetInfo>
    <Type>BufferPanel</Type>
    <LocalizedType>缓冲区面板</LocalizedType>
    <Description>进行缓冲区计算的显示界面。</Description>
    <Label>缓冲区</Label>
    <Tooltip>点击创建缓冲区</Tooltip>
    <ImageUrl>images/icons.png</ImageUrl>
    <ImageClass>buffer</ImageClass>
    <StandardUi>true</StandardUi>
    <ContainableBy>Any</ContainableBy>
    <Parameter>
        <Name>Target</Name>
        <Label>目标</Label>
        <Type>target</Type>
        <Description>指定显示缓冲区的框架、窗口或任务面板。 默认为新窗口。</Description>
        <IsMandatory>true</IsMandatory>
        <DefaultValue>TaskPane</DefaultValue>
    </Parameter>
</WidgetInfo>

<!-- this release of fusion uses the BufferPanel widget rather than Buffer.  These
wil be merged in the future -->
<WidgetInfo>
    <Type>Buffer</Type>
    <LocalizedType>缓冲区计算</LocalizedType>
    <Description>基于被选中的要素进行缓冲区计算。</Description>
    <Label>创建缓冲区</Label>
    <Tooltip>点击创建缓冲区</Tooltip>
    <ImageUrl>images/icons.png</ImageUrl>
    <ImageClass>buffer</ImageClass>
    <StandardUi>true</StandardUi>
    <ContainableBy>Any</ContainableBy>
    <Parameter>
        <Name>LayerName</Name>
        <Label>图层名称</Label>
        <Type>string</Type>
        <Description>缓冲区图层名称</Description>
        <DefaultValue>缓冲区</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>LayerNameInput</Name>
        <Label>缓冲区图层标签名称</Label>
        <Type>string</Type>
        <Description>缓冲区图层标签名称</Description>
        <DefaultValue>缓冲区图层名称</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>BufferDistance</Name>
        <Label>缓冲区半径</Label>
        <Type>double</Type>
        <Description>用于缓冲区计算的半径</Description>
        <DefaultValue>100</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>BufferDistanceInput</Name>
        <Label>缓冲区半径标签名称</Label>
        <Type>string</Type>
        <Description>缓冲区半径标签名称</Description>
        <DefaultValue>缓冲区半径</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>BufferUnits</Name>
        <Label>缓冲区单位</Label>
        <Type>string</Type>
        <Description>用于计算缓冲区的长度单位</Description>
        <AllowedValue>
          <Name>meters</Name>
          <Label>米</Label>
        </AllowedValue>
        <AllowedValue>
          <Name>feet</Name>
          <Label>英尺</Label>
        </AllowedValue>
        <AllowedValue>
          <Name>miles</Name>
          <Label>英里</Label>
        </AllowedValue>
        <AllowedValue>
          <Name>kilometers</Name>
          <Label>千米</Label>
        </AllowedValue>
        <DefaultValue>meters</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>BufferUnitsInput</Name>
        <Label>缓冲区单位标签</Label>
        <Type>string</Type>
        <Description>缓冲区单位标签</Description>
        <DefaultValue>缓冲区单位</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>BorderColor</Name>
        <Label>边界颜色</Label>
        <Type>color</Type>
        <Description>缓冲区边界颜色</Description>
        <DefaultValue>ff000000</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>BorderColorInput</Name>
        <Label>边界颜色标签</Label>
        <Type>string</Type>
        <Description>边界颜色标签</Description>
        <DefaultValue>缓冲区边界颜色</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>FillColor</Name>
        <Label>填充颜色</Label>
        <Type>color</Type>
        <Description>缓冲区填充颜色</Description>
        <DefaultValue>33FF0000</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
    <Parameter>
        <Name>FillColorInput</Name>
        <Label>填充颜色标签</Label>
        <Type>string</Type>
        <Description>填充颜色标签</Description>
        <DefaultValue>缓冲区填充颜色</DefaultValue>
        <IsMandatory>0</IsMandatory>
    </Parameter>
</WidgetInfo>

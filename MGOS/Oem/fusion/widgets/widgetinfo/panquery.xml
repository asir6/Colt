<WidgetInfo>
  <Type>PanQuery</Type>
  <LocalizedType>平移查询</LocalizedType>
  <Description>合并平移和查询操作，鼠标移动为平移，鼠标点击为查询。</Description>
  <Location></Location>
  <Label>平移/查询</Label>
  <Tooltip>拖拽鼠标平移，点击鼠标查询</Tooltip>
  <StatusText></StatusText>
  <ImageUrl>images/icons.png</ImageUrl>
  <ImageClass>pan</ImageClass>
  <StandardUi>true</StandardUi>
  <ContainableBy>Any</ContainableBy>
  <Parameter>
    <Name>SelectionType</Name>
    <Description>选择操作的类型</Description>
    <Type>String</Type>
    <Label>选择类型</Label>
    <DefaultValue>INTERSECTS</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>Tolerance</Name>
    <Description>鼠标点选可容许的像素误差</Description>
    <Type>integer</Type>
    <Label>容错值</Label>
    <Min>1</Min>
    <DefaultValue>3</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>QueryActiveLayer</Name>
    <Description>是否只在活动层上选取要素</Description>
    <Type>boolean</Type>
    <Label>仅在活动层选取</Label>
    <DefaultValue>false</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
</WidgetInfo>

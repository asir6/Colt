<WidgetInfo>
  <Type>SelectPolygon</Type>
  <LocalizedType>多边形选择</LocalizedType>
  <Description>通过绘制多边形选择要素。</Description>
  <Location></Location>
  <Label>多边形选择</Label>
  <Tooltip>绘制一个多边形选择地图上的要素</Tooltip>
  <StatusText></StatusText>
  <ImageUrl>images/icons.png</ImageUrl>
  <ImageClass>select-polygon</ImageClass>
  <StandardUi>true</StandardUi>
  <ContainableBy>Any</ContainableBy>
  <Parameter>
    <Name>SelectionType</Name>
    <Description>选择要素的方式</Description>
    <Type>String</Type>
    <Label>选择方式</Label>
    <DefaultValue>INTERSECTS</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>Tolerance</Name>
    <Description>鼠标点选可容许的像素误差</Description>
    <Type>integer</Type>
    <Label>容错值</Label>
    <Min>1</Min>
    <DefaultValue>3</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
</WidgetInfo>

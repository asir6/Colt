<WidgetInfo>
  <Type>Measure</Type>
  <LocalizedType>测量</LocalizedType>
  <Description>在地图上执行测量操作。</Description>
  <Location></Location>
  <Label>测量</Label>
  <Tooltip>在地图上测量距离与面积</Tooltip>
  <StatusText></StatusText>
  <ImageUrl>images/icons.png</ImageUrl>
  <ImageClass>measure</ImageClass>
  <StandardUi>true</StandardUi>
  <ContainableBy>Any</ContainableBy>
  <Parameter>
    <Name>Units</Name>
    <Description>测量单位</Description>
    <Type>String</Type>
    <Label>单位</Label>
    <AllowedValue>
      <Name>Meters</Name>
      <Label>米</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Miles</Name>
      <Label>英里</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Degrees</Name>
      <Label>度</Label>
    </AllowedValue>
    <DefaultValue>none</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>DistancePrecision</Name>
    <Description>测量距离的精度</Description>
    <Type>integer</Type>
    <Label>距离精度</Label>
    <Min>1</Min>
    <Max>8</Max>
    <DefaultValue>4</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>AreaPrecision</Name>
    <Description>测量面积的精度</Description>
    <Type>integer</Type>
    <Label>面积精度</Label>
    <Min>1</Min>
    <Max>8</Max>
    <DefaultValue>4</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>Type</Name>
    <Description>测量方式</Description>
    <Type>String</Type>
    <Label>方式</Label>
    <AllowedValue>
      <Name>Both</Name>
      <Label>距离/面积</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Distance</Name>
      <Label>距离</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>Area</Name>
      <Label>面积</Label>
    </AllowedValue>
    <DefaultValue>Both</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>MeasureTooltipContainer</Name>
    <Description>显示当前距离的HTML容器</Description>
    <Type>String</Type>
    <Label>HTML容器</Label>
    <DefaultValue>MeasureContainerBox</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>FillStyle</Name>
    <Description>绘制矩形的填充样式</Description>
    <Type>String</Type>
    <Label>填充样式</Label>
    <DefaultValue>rgba(0,0,255, 0.3)</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>LineStyleWidth</Name>
    <Description>绘制时的线宽</Description>
    <Type>integer</Type>
    <Label>线条宽度</Label>
    <Min>1</Min>
    <Max>6</Max>
    <DefaultValue>2</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>LineStyleColor</Name>
    <Description>绘制线条的颜色</Description>
    <Type>String</Type>
    <Label>线条颜色</Label>
    <DefaultValue>rgba(0,0,255,0.3)</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>MeasureTooltipType</Name>
    <Description>测量提示的类型</Description>
    <Type>String</Type>
    <Label>提示类型</Label>
    <AllowedValue>
      <Name>static</Name>
      <Label>静态</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>dynamic</Name>
      <Label>动态</Label>
    </AllowedValue>
    <DefaultValue>static</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>MeasureTipPositionTop</Name>
    <Description>测量提示的上边距</Description>
    <Type>String</Type>
    <Label>提示上边距</Label>
    <DefaultValue>100</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
    <Name>MeasureTipPositionLeft</Name>
    <Description>测量提示左边距</Description>
    <Type>String</Type>
    <Label>提示左边距</Label>
    <DefaultValue>15</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
  <Parameter>
      <Name>Target</Name>
      <Label>目标</Label>
      <Type>target</Type>
      <Description>指定显示测量界面的框架、窗口或任务面板。 默认为新窗口。</Description>
      <IsMandatory>true</IsMandatory>
      <DefaultValue>TaskPane</DefaultValue>
  </Parameter>
</WidgetInfo>
